{   
    "version" : 1,
    "builds": [
        {
            "src": "AlumniFinder/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb" , "runtime": "python3.11.6"}
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
              "distDir": "staticfiles_build"
            }
        }
    ],
    "routes": [
        {
                "src": "/static/(.*)",
                "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "AlumniFinder/wsgi.py"
        }
    ]
}